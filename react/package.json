{
  "name": "liaishizi-react",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start":      "react-scripts start",
    "starts":     "HTTPS=true react-scripts start",
    "build":      "react-scripts build",
    "servebuild": "http-server ./build --gzip --brotli",
    "servebuild#comment": "'-g/-b'=gzip/brotli compression, '--ssl --cert ../cert/selfssl.crt --key ../cert/selfssl.key'=https",
    "test:unit":  "react-scripts test",
    "test:e2e":   "http-server ./build -c-1 --silent --gzip --brotli & wait-on http://localhost:8080 & cypress run --headless",
    "eject":      "react-scripts eject"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1"
  },
  "devDependencies": {
    "cypress": "^4.0.2",
    "http-server": "^0.12.1",
    "wait-on": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
