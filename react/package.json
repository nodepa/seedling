{
  "name": "liaishizi-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "cypress": "^4.0.2",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.2",
    "http-server": "^0.12.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "wait-on": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "starts": "HTTPS=true react-scripts start",
    "build": "react-scripts build",
    "servebuild": "http-server ./build --gzip --brotli",
    "//servebuild": "'-g/-b'=gzip/brotli compression, '--ssl --cert ../cert/selfssl.crt --key ../cert/selfssl.key'=https",
    "test:unit": "react-scripts test",
    "test:unit:coverage": "react-scripts test --coverage",
    "test:e2e": "yarn build && http-server ./build -c-1 --silent --gzip --brotli && wait-on http://localhost:8080 && cypress run --headless",
    "test:e2e:open": "yarn build && http-server ./build -c-1 --silen --gzip --brotli && wait-on http://localhost:8080 && cypress run",
    "lint": "eslint '**/*.{js,ts,jsx,tsx,scss,sass,json}' --ignore-pattern build --ignore-pattern tests --fix",
    "verify": "yarn install && yarn lint && yarn test:unit:coverage && yarn test:e2e",
    "sync": "yarn build && aws s3 sync build/ s3://react-liaishizi/ --delete",
    "genass": "cd public && pwd && npx pwa-asset-generator --background 'linear-gradient(#19D2FE, #1E64F0)' --padding '0px' --favicon --single-quotes ../src/assets/logo/logo.svg ./logo",
    "eject": "react-scripts eject"
  }
}
